<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IncidentesAMT.Menu" Title="Menú prinipal"  NavigationPage.HasBackButton="False" >
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Perfil"
                 IconImageSource="account.png"
                 Order="Primary"
                 Clicked="ToolbarItem_Clicked"
                 Priority="0" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <Image Source="https://tramitesyrequisitos.com/wp-content/uploads/2018/10/AMT.jpg" HorizontalOptions="CenterAndExpand" WidthRequest="100" Margin="0,10,0,0"/>

            <StackLayout Margin="3" Padding="10">
                <Label Text="Notificaciónes" FontSize="Subtitle" TextTransform="Uppercase" FontAttributes="Bold" Padding="0,0,0,9" ></Label>

                <Frame x:Name="frmFalsos" IsVisible="{Binding FrmFalsos}" BorderColor="Chocolate"
                           CornerRadius="5"
                           Padding="8">
                    <StackLayout>
                        <Label x:Name="lblIncFalsos" 
                               Text="{Binding Lblfalso}"
                               FontSize="Medium"
                               HorizontalOptions="Center"
                               FontAttributes="Bold" />
                        <BoxView Color="Gray"
                                 HeightRequest="2"
                                 HorizontalOptions="Fill" />
                        <Label Text="Tu cuenta está próxima a bloquearse" HorizontalOptions="Center"/>
                    </StackLayout>
                </Frame>

                <Frame x:Name="frmActivos" IsVisible="{Binding FrmActivos}" BorderColor="Chocolate"
                           CornerRadius="5"
                           Padding="8">
                    <StackLayout>
                        <Label x:Name="lblIncActivos" 
                               Text="{Binding LblIncActivos}"
                               FontSize="Medium"
                               HorizontalOptions="Center"
                               FontAttributes="Bold" />
                        <BoxView Color="Gray"
                                 HeightRequest="2"
                                 HorizontalOptions="Fill" />
                        <Label Text="Tu incidente está siendo atendido" HorizontalOptions="Center"/>
                    </StackLayout>
                </Frame>

                <BoxView HorizontalOptions="FillAndExpand" WidthRequest="1" Color="Gray" HeightRequest="1" Margin="0,15,0,15"/>
                <Label Text="Reportar Incidente" FontSize="Subtitle" FontAttributes="Bold" TextTransform="Uppercase" Padding="0,0,0,9"></Label>

                <CollectionView x:Name="cwIncidentes" 
                    ItemsLayout="VerticalGrid, 2" SelectionMode="Single" SelectionChanged="cwIncidentes_SelectionChanged">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="0,0,0,0"
                                       CornerRadius="5"
                                       IsClippedToBounds="False">
                                <Grid Padding="5" Margin="2" BackgroundColor="Chocolate">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="35" />
                                        <RowDefinition Height="65" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="169"/>
                                        <!--<ColumnDefinition Width="140" />-->
                                    </Grid.ColumnDefinitions>
                                    <!--<Image Grid.RowSpan="2"
                                                   Source="{Binding ImageUrl}"
                                                   Aspect="AspectFill"
                                                   HeightRequest="60"
                                                   WidthRequest="60" />-->
                                    <Label Grid.Column="0"
                                               Grid.Row="1"
                                               HorizontalOptions="Center"
                                               VerticalOptions="FillAndExpand"
                                               Text="{Binding nombre}"
                                               FontAttributes="Bold"
                                               LineBreakMode="TailTruncation" />
                                    <!--<Label Grid.Row="1"
                                                   Grid.Column="1"
                                                   Text="{Binding Location}"
                                                   LineBreakMode="TailTruncation"
                                                   FontAttributes="Italic"
                                                   VerticalOptions="End" />-->
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>