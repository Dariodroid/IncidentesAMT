<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IncidentesAMT.View.RecuperarPassword" Title="Recuperación de contraseña">
    <ContentPage.Content>
        <StackLayout Margin="10,50,0,0">
            <Label Text="Ingrese su número de Cédula:" TextColor="Black"/>
            <Entry x:Name="txtCedula" TextColor="Black" MaxLength="10" Keyboard="Numeric" Placeholder="Cédula" Text="{Binding Identificacion}" Grid.Row="0" Grid.Column="0"/>

            <Button x:Name="btnSiguiente" TextColor="Black" Margin="10" Text="Recuperar contraseña" TextTransform="None" BackgroundColor="#2196F3" CornerRadius="50" Command="{Binding ResetCommand}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>